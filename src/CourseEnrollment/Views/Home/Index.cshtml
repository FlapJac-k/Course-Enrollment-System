@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">Course Enrollment Dashboard</h2>

    <div class="row g-4">
        <!-- Students Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 dashboard-card text-center">
                <div class="card-body">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Students</h5>
                    <p class="text-muted">Manage all students and profiles</p>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-primary">
                        View Students
                    </a>
                </div>
            </div>
        </div>

        <!-- Courses Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 dashboard-card text-center">
                <div class="card-body">
                    <div class="display-4 text-success mb-3">
                        <i class="bi bi-book-fill"></i>
                    </div>
                    <h5 class="card-title fw-bold">Courses</h5>
                    <p class="text-muted">Browse and manage available courses</p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-success">
                        View Courses
                    </a>
                </div>
            </div>
        </div>

        <!-- Enrollments Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 dashboard-card text-center">
                <div class="card-body">
                    <div class="display-4 text-warning mb-3">
                        <i class="bi bi-journal-check"></i>
                    </div>
                    <h5 class="card-title fw-bold">Enrollments</h5>
                    <p class="text-muted">Track student course enrollments</p>
                    <a asp-controller="Enrollments" asp-action="Index" class="btn btn-warning">
                        View Enrollments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>